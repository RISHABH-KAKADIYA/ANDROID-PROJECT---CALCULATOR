<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="6"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="CONVERTER"
        android:background="#0A0A0B"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#2D9EF8"
        android:textSize="50dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/scientific"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="scientific calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>



        <Button
            android:id="@+id/mortgage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="mortgage calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:weightSum="2">


        <Button
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="discount calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>



        <Button
            android:id="@+id/age"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="age         calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:weightSum="2">


        <Button
            android:id="@+id/gst"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="gst       calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>

        <Button
            android:id="@+id/currency"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="currency converter"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="19dp"
            android:background="@drawable/keyboard_btn"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bmi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="bmi        calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>



        <Button
            android:id="@+id/percentage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="percentage calculator"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="18dp"
            android:background="@drawable/keyboard_btn"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:weightSum="2">


        <Button
            android:id="@+id/split"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="split bill"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="20dp"
            android:background="@drawable/keyboard_btn"/>

        <Button
            android:id="@+id/converter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="converter"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#00070C"
            android:textSize="19dp"
            android:background="@drawable/keyboard_btn"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:paddingHorizontal="110dp"
        android:weightSum="1">


        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="back"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textColor="#058EFB"
            android:textSize="35dp"
            android:background="@drawable/keyboard_btn"/>

    </LinearLayout>

</LinearLayout>



